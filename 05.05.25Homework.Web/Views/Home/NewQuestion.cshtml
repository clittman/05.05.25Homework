<div class="row" style="min-height: 80vh; display:flex; align-items: center;">
    <div class="col-md-8 offset-md-2 bg-light p-4 rounded shadow">
        <h2>Ask a Question</h2>
        <form method="post" action="/home/newquestion">
            <input class="form-control" name="title" placeholder="Title" >
            <br>
            <textarea class="form-control" placeholder="Type your question here..." rows="10" name="content"></textarea>
            <br>
            <select multiple class="form-control" id="tags" name="stringTags"></select>
            <br>
            <button class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-tagsinput/0.8.0/bootstrap-tagsinput.js"></script>
    <script>
        $(() => {
            $("#tags").tagsinput({
                tagClass: 'badge bg-primary'
            });
        })
    </script>
}

@section styles
{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-tagsinput/0.8.0/bootstrap-tagsinput.css" />
}